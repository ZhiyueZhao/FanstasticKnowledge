<!DOCTYPE html>
<html>
  <head>
    <title>FantasticKnowledge</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <p>Hello, <%= current_user.first_name %> - <%= link_to "Sign Out", destroy_user_session_path, :method => 'delete' %> <%= link_to "All my orders", orders_path %> <%= link_to "Home", root_path %></p>
    <% else %>
      <%= link_to "Sign In", new_user_session_path %>
    <% end %>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
